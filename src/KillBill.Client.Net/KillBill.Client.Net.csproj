<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>2.0.0</VersionPrefix>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RuntimeFrameworkVersion>2.0.5</RuntimeFrameworkVersion>
    <RootNamespace>KillBill.Client.Net</RootNamespace>
    <AssemblyName>KillBill.Client.Net</AssemblyName>
    <PackageId>KillBill.Client.Net</PackageId>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <CodeAnalysisRuleSet>../../sagstyle.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="5.0.*"/>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.*"/>
    <PackageReference Include="RestSharp" Version="106.11.*"/>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta004"/>  
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.DotNet.Watcher.Tools" Version="2.0.*" />
  </ItemGroup>
  
</Project>